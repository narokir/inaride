<h1>Listing maps</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Origin</th>
    <th>Destination</th>
    <th>Longitude</th>
    <th>Latitude</th>
    <th>Waypoint 1</th>
    <th>Gmaps</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @maps.each do |map| %>
  <tr>
    <td><%= map.title %></td>
    <td><%= map.origin %></td>
    <td><%= map.destination %></td>
    <td><%= map.longitude %></td>
    <td><%= map.latitude %></td>
    <td><%= map.waypoint_1 %></td>
    <td><%= map.gmaps %></td>
    <td><%= link_to 'Show', map %></td>
    <td><%= link_to 'Edit', edit_map_path(map) %></td>
    <td><%= link_to 'Destroy', map, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Map', new_map_path %>

<%= gmaps("markers" => {"data" => @json, "options" => {"rich_marker" => true } }) %>

<div class="modal hide fade" id="signinModal">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><%= image_tag('/assets/close.png') %></button>
    <h3>Sign In</h3>
    <p>Not registered yet? <%= link_to "Sign up!", signup_path %></p>
  </div>
  <div class="modal-body">
    <div class="row">
    <div class="span2 embos">
      <%= link_to image_tag('fb-logo.png'), "/auth/facebook", class: "sign_in" %>
      <%= link_to 'Sign in', "/auth/facebook", class: "btn" %>
    </div>
    <div class="span">
      <%= render "/sessions/form" %>
    </div>
    </div>
  </div>
</div>
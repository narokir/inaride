<% provide(:title, 'Sign In') %>
<% notice %>
<div class="row-fluid">
  <div class="embos span6 offset3">
    <h1>Sign in</h1>
    <p>Not registered yet? <%= link_to "Sign up!", signup_path %></p>
    <hr>
      <% if flash[:error].present? %>
      <%= render inline: "<div class='alert alert-error'>#{flash[:error]}</div>" %>
      <% end %>
    <div class="row-fluid">
      <div class="span5 embos">
	<%= link_to image_tag('fb-logo.png'), "/auth/facebook", class: "sign_in" %>
	<%= link_to 'Sign in', "/auth/facebook", class: "btn" %>
      </div>
      <div class="span4">
	<%= render "form" %>
      </div>
    </div>
  </div>
</div>
    


<div id="login-errors"></div>
  <% if flash[:error].present? %>
  <%= render inline: "<div class='alert alert-error'>#{flash[:error]}</div>" %>
  <% end %>
<%= simple_form_for(:session, url: sessions_path, :html => { id:"signin" }) do |f| %>
  <%= f.input :email, :placeholder => 'Email', :label => false, :label_html => { :class => 'fancy-label' } %>
  <%= f.input :password, :placeholder => 'Password', :label => false, :label_html => { :class => 'fancy-label' } %>
  <%= f.submit "Sign in", id: "login",class: "btn btn-large btn-primary" %>
<% end %>


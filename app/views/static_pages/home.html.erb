<section id = "rides">
  <table class="table">
    <tr>
      <% @ride.each do |ride| %>
      <td><%= image_tag(ride.user.usr_img)%></td>
      <td><h3><%= link_to "#{ride.origin}   ---------> #{ride.destination}", ride, class: "" %></h3><p><%= ride.date.strftime(" %A, %b %d, %Y") %></p></td>
      <td><%= ride.user_id %></td>
      <td><%= ride.id %></td>
    </tr>
    <% end %>
  </table>
</section>
<% @rides.each do |ride| %>
  <tr>
    <td>
      <div class="profile_img_wrap">
	<div><%= image_tag(ride.user.image, options = {:class =>"profile_img_small"})  %></div>
      </div>
      <div class="info">
	<small><%= link_to ride.user.first_name,ride.user %></small>
      </div>
    </td>
    <td><%= link_to "#{ride.origin} ---> #{ride.destination}", ride %></br>
    <span class="date"><%= ride.date.strftime(" %A, %b %d, %Y") %></span> | <%= ride.time.strftime(" %I, %M %p") %>
    </td>
    <td>
    <div class="span price">
      <span class="price"><%= number_to_currency(ride.price, precision: 0) %></span>
      <small class="muted">Per passenger</small>
    </div>
    </td>
    <td>
      <%= link_to 'Show', ride %>
    </td>
  </tr>
<% end %>
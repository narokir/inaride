<% @rides.each do |ride| %>
  <tr>
    <td>
      <div class="profile_img_wrap">
	<div><%= image_tag(ride.user.usr_img, options = {:class =>"profile_img_small"})  %></div>
      </div>
      <div class="info">
	<p><%= link_to ride.user.first_name,ride.user %></p>
      </div>
    </td>
    <td><%= link_to "#{ride.origin} ---> #{ride.destination}", ride %></br>
    <small class="muted"><%= ride.date.strftime(" %A, %b %d, %Y") %></small>
    </td>
    <td>
    <div class="span price">
      <span class="ride-price"><%= number_to_currency(ride.price, precision: 0) %></span>
    </div>
    </td>
    <td>
      <%= link_to 'Show', ride %>
    </td>
  </tr>
<% end %>
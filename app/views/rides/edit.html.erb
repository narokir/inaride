<% provide(:title, 'Edit Ride')%>
<div class="row-fluid">
  <div class="embos span8">
      <h1>Edit ride</h1><hr>
      <%= simple_form_for(@ride,:html => {:class => 'form-horizontal' }) do |f| %>
      <%= render 'fields', f: f %>
      <div class="controls">
      <%= f.submit "Save changes", class: "btn btn-large btn-success" %>
      </div>
    <% end %>
  </div>
  <div class="span4 embos">
    <%= render 'map' %>
  </div>
</div>

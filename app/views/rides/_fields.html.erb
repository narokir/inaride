<%= f.input :price,:wrapper_html => { :class => '' }, :label => "Price per seat",:wrapper => :prepend do %>
    <span class="add-on">$</span><%= f.input_field :price,class:'span4 has-popover',title: "Ride contrebutions","data-content" =>"Enter the ammount you would like each passenger to contrebute to the ride.","value"=>"2",:wrapper_html => { :class => 'span1' },:label => "Price per seat", :input_html => {} %>
<% end %>
<%= f.input :seats,:wrapper_html => { :class => '' },:label => "Seats avlable", :input_html => {:class => 'span1 has-popover',:title =>"Seats Available","data-content" =>"Enter the number of seats available for passengers.","value"=>"2"} %>
<%= f.input :notes,label: "Any notes?",:input_html => {:class =>"span8",:rows=> 3},placeholder: "Hey, I'm #{current_user.first_name}, I can offer someone a ride."%>

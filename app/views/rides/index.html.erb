<% provide(:title, 'Rides')%>
<div class="page-header">
<h1>Rides</h1>
</div>


<table class="table table-striped table-bordered">
  <tr>
    <th>Origin</th>
    <th>Destination</th>
    <th>Date</th>
    <th>User</th>
  </tr>

<% @rides.each do |ride| %>
  <tr>
    <td><%= ride.origin %></td>
    <td><%= ride.destination %></td>
    <td><%= ride.date %></td>
    <td><%= ride.user_id %></td>
    <td><span class="btn"><%= link_to 'Show', ride,class:"btn btn-mini" %></span></td>
    <td><%= link_to 'Edit', edit_ride_path(ride), class:"btn btn-mini" %></td>
    <td><%= link_to 'Destroy', ride, confirm: 'Are you sure?', method: :delete, class:"btn btn-mini" %></td>
  </tr>
<% end %>
<%= @users %>
</table>

<br />

<%= link_to 'New Ride', new_ride_path, class:"btn btn-large btn-primary" %>

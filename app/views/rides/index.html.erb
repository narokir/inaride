<% provide(:title, 'Rides')%>
<%notice%>
<div class="masthead-background">
<div class="masthead">
  <div class="container">
    <div class="search-container">
<%= render 'layouts/search' %>
    </div>
  </div>
</div>
</div>

<div class="container">


<div class="page-header">
<h1>Rides</h1>
</div>

<table class="table table-striped table-bordered">
  
  <tr>
    <th>Driver</th>
    <th>Trip</th>
    <th>Origin</th>
    <th>Destination</th>
    <!--<th>user_id</th>-->
    <!--<th>id</th>-->
    <th>Price</th>
    <th>Action</th>
  </tr>
  

<% @rides.each do |ride| %>
  <tr>
    <td>
      <%= image_tag(ride.user.usr_img,options={:class =>"profile_img_small"})%>
    </td>
    <td>
      <h4><%= link_to "#{ride.origin} ---> #{ride.destination}", ride %></h4>
      <p class="date"><%= ride.date.strftime(" %A, %b %d, %Y") %></p>
    </td>
    <td><%= ride.origin %></td>
    <td><%= ride.destination %></td>
    <!--<td><%# ride.user_id %></td>-->
    <!--<td><%# ride.id %></td>-->
    <td><%= ride.price %></td>
    
    <td>
      <div class="btn-group">
	<a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
	  Action
	  <span class="caret"></span>
	  </a>
	<ul class="dropdown-menu">
	  <li><%= link_to 'Show', ride %></li>
	  <li><%= link_to 'Edit', edit_ride_path(ride) %></li>
	  <li><%= link_to 'Destroy', ride, confirm: 'Are you sure?', method: :delete %></li>
	</ul>
      </div>
    </td>
  </tr>
<% end %>

</table>
<%= link_to 'Add New Ride', new_ride_path, class: "btn btn-success btn-large"%>
</div><!--end container-->


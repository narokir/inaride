<% provide(:title, 'Rides')%>
<div class="page-header">
<h1>Rides</h1>
</div>


<table class="table table-striped table-bordered">
  <tr>
    <th>Title</th>
    <th>Origin</th>
    <th>Destination</th>
    <th>Date</th>
    <th>user_id</th>
    <th>id</th>
    <th>created_at</th>
    <th>updated_at</th>
    <th></th>
  </tr>

<% @rides.each do |ride| %>
  <tr>
    <td><%= ride.title %></td>
    <td><%= ride.origin %></td>
    <td><%= ride.destination %></td>
    <td><%= ride.date %></td>
    <td><%= ride.user_id %></td>
    <td><%= ride.id %></td>
    <td><%= ride.created_at %></td>
    <td><%= ride.updated_at %></td>
    <td>
      <div class="btn-group">
	<a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
	  Action
	  <span class="caret"></span>
	  </a>
	<ul class="dropdown-menu">
	  <li><%= link_to 'Show', ride %></li>
	  <li><%= link_to 'Edit', edit_ride_path(ride) %></li>
	  <li><%= link_to 'Destroy', ride, confirm: 'Are you sure?', method: :delete %></li>
	</ul>
      </div>
    </td>
  </tr>
<% end %>
<%= @users %>
</table>

<br />

<%= link_to 'New Ride', new_ride_path, class:"btn btn-large btn-primary" %>

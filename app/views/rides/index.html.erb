<% provide(:title, 'Rides')%>

<div class="subhead">
    <div class="">
      <div class="container">
	

	  </div>
    </div>
  </div>

<div class="page-header">
<h1>Rides</h1>
</div>


<table class="table table-striped table-bordered">
  
  <tr>
    <th>Driver</th>
    <th>Trip</th>
    <th>Origin</th>
    <th>Destination</th>
    <th>Date</th>
    <th>user_id</th>
    <th>id</th>
    <th>Action</th>
  </tr>
  

<% @rides.each do |ride| %>
  <tr>
    <td><%= link_to image_tag(ride.user.img_url, class: "pull-left"), current_user %><small class="caption span"><%= link_to current_user.name, current_user %></small></td>
    <td><%= link_to "#{ride.origin} ---> #{ride.destination}", ride %></td>
    <td><%= ride.origin %></td>
    <td><%= ride.destination %></td>
    <td><%= ride.date %></td>
    <td><%= ride.user_id %></td>
    <td><%= ride.id %></td>
    
    <td>
      <div class="btn-group">
	<a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
	  Action
	  <span class="caret"></span>
	  </a>
	<ul class="dropdown-menu">
	  <li><%= link_to 'Show', ride %></li>
	  <li><%= link_to 'Edit', edit_ride_path(ride) %></li>
	  <li><%= link_to 'Destroy', ride, confirm: 'Are you sure?', method: :delete %></li>
	</ul>
      </div>
    </td>
  </tr>
<% end %>

</table>
<%= link_to 'Ad New Ride', new_ride_path, class: "btn btn-primary btn-large"%>



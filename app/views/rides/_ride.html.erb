<tr>
  <td>
    <div class="profile_img_wrap">
      <div><%= image_tag(ride.user.usr_img, options = {:class =>"profile_img_small"})  %></div>
    </div>
    <div class="info">
      <p><%= link_to ride.user.first_name,ride.user %></p>
    </div>
  </td>
  <td>
    <%= link_to "#{ride.origin} ---> #{ride.destination}", ride %><br>
    <small class="muted"><%= ride.date.strftime(" %A, %b %d, %Y") %><small>
  </td>
  <td>
    <div class="span price">
      <h3><%= number_to_currency(ride.price, precision: 0) %></h3>
    </div>
  </td>
  <td>
    <div class="btn-group">
      <a class="btn btn-mini dropdown-toggle" data-toggle="dropdown" href="#">
	Action
	<span class="caret"></span>
	</a>
      <ul class="dropdown-menu">
	<% if current_user.admin? && !current_user?(ride.user) %>
	<li><%= link_to 'Edit', edit_ride_path(ride) %></li>
	<li><%= link_to 'Delete', ride, confirm: 'Are you sure?', method: :delete %></li>
	<% end %>
      </ul>
    </div>
  </td>
</tr>

<% provide(:title, 'Create New Ride')%>

<div class="row-fluid">
  <div class="span8 embos">
      <h1>New Pickmeup</h1><hr>
      <%= simple_form_for(@ride,:html => {:class => 'form-horizontal' }) do |f| %>
      <%= render 'fields', f: f %>
      <div class="controls">
      <%= f.submit "Done", class: "btn btn-large btn-success" %>
      </div>
    <% end %>
  </div>
  <div class="span4 embos">
    <%= render 'map' %>
  </div>
</div>
  

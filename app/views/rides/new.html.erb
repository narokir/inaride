<% provide(:title, 'Create New Ride')%>

<div class="row-fluid">
  
  <div class="span8 embos">
      <h1>New Ride</h1><hr>
      <%= simple_form_for(@ride,:html => {:class => 'form-horizontal' }) do |f| %>
      <%= render 'fields', f: f %>
      <div class="controls">
	<% if signed_in? %>
	  <%= f.submit "Post Ride", class: "btn btn-large btn-success" %>
	<% else %>
	  <%= f.submit "Post Ride", html_options = { class: "btn btn-large btn-success tooltip-top",title:"Sign in first" } %>
	  <%= link_to('Sign in to post ride', "#signinModal", :id => 'login', class:"btn btn-large", "data-toggle" => "modal") %>
	  <%# f.submit "Done", html = { id: "submit_new_ride", class: "btn btn-large btn-success",:disabled => true }  %>
	<% end %>
      </div>
    <% end %>
  </div>
  <div class="span4 embos">
    <%= render 'map' %>
  </div>
  
</div>
  

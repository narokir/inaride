<div class="container">
<%= notice %>

<table class="table table-bordered table-striped">
  <thead>
    <td colspan=6><h1 class="pull-left"><%= @user.name %></h1></td>
    <tr>
      <th>id:</th>
      <th>Name:</th>
      <th>Email:</th>
      <th>usr_img:</th>
      <th>uid:</th>
    </tr>
  </thead>
    <tbody>
      <tr>
	<td><%= @user.id %></td>
	<td><%= @user.name %></td>
	<td><%= @user.email %></td>
	<td><%= @user.usr_img %></td>
	<td><%= @user.uid %></td>
      </tr>
      <tr>
	<td colspan=1>
	  <b>Token:</b>
	</td>
	<td colspan=5><%= @user.oauth_token %></td>
      </tr>
      <tr>
	<td colspan=7>
	  <div>
	    <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-mini" %>  | 
	    <%= link_to 'Back', users_path, class: "btn btn-mini" %>
	  </div>
	</td>
      </tr>
    </tbody>
</table>

<div>
<h1>Rides</h1>
</div>


<table class="table table-striped table-bordered">
  
  <tr>
    <th>Trip</th>
    <th>Origin</th>
    <th>Destination</th>
    <th>Date</th>
    <th>user_id</th>
    <th>id</th>
    <th>Action</th>
  </tr>

<% @user.rides.each do |ride| %>
  <tr>
    <td><%= link_to "#{ride.origin} ---> #{ride.destination}", ride %></td>
    <td><%= ride.origin %></td>
    <td><%= ride.destination %></td>
    <td><%= ride.date.strftime(" %A, %b %d, %Y") %></td>
    <td><%= ride.user_id %></td>
    <td><%= @ride_id %></td>
    <td>
      <div class="btn-group">
	<a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
	  Action
	  <span class="caret"></span>
	  </a>
	<ul class="dropdown-menu">
	  <li><%= link_to 'Show', ride %></li>
	  <li><%= link_to 'Edit', edit_ride_path(ride) %></li>
	  <li><%= link_to 'Destroy', ride, confirm: 'Are you sure?', method: :delete %></li>
	</ul>
      </div>
    </td>
  </tr>
<% end %>
</table>
</div>


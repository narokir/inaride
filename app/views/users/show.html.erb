<% provide(:title, @user.name)%>
<div class="container" xmlns="http://www.w3.org/1999/html">
<%= notice %>
<div class="row-fluid">
    <h1 class="user-details"><%= @user.name %></h1>
<div class="container">
      <div class="span4 well">
        <section class="clearfix">
        <div class="greeting">
          <p><strong>Hey There</strong></p>
        </div>
        <hr>
        <div class="profile_img_wrap">
	  <div><%= image_tag(usr_profile_img, options = {:class =>"profile_img_small"})  %></div>
          <div><%# image_tag(@user.usr_img, options = {:class =>"profile_img_small"})  %></div>
        </div>
        <div class="info">
          <p><%= @user.name %></p>
          <%= link_to 'Edit Profile', edit_user_path, :class => 'btn btn-mini' %>
        </div>
      </section>
    </div>

    <div class="span8">
      <table class="table table-striped table-bordered">
         <th colspan="2">Rides</th>
        <% @user.rides.each do |ride| %>
            <tr>
              <td><%= link_to "#{ride.origin} ---> #{ride.destination}", ride %><p><%= ride.date.strftime(" %A, %b %d, %Y") %></p></td>
              <td>
                <div class="btn-group">
                  <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                    Action
                    <span class="caret"></span>
                  </a>
                  <ul class="dropdown-menu">
                    <li><%= link_to 'Show', ride %></li>
                    <li><%= link_to 'Edit', edit_ride_path(ride) %></li>
                    <li><%= link_to 'Destroy', ride, confirm: 'Are you sure?', method: :delete %></li>
                  </ul>
                </div>
              </td>
            </tr>
        <% end %>
      </table>
    </div>
  </div>


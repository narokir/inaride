<% provide(:title, @user.name)%>
<div class="container">
<%= notice %>

  <div class="page-header"></div>

  <div class="row">
    <div class="span4 well2">
      <section>
        <div class="pic"><div><%= image_tag(@user.usr_img)%></div></div>
        <div class="info">
          <p><strong><%= @user.name %></strong></p>
          <p><%= @user.email %></p>
        </div>
      </section>
    </div>
    <div class="span4"></div>
  </div>

<div>
<h1>Rides</h1>
</div>


<table class="table table-striped table-bordered">
  
  <tr>
    <th>Trip</th>
    <th>Origin</th>
    <th>Destination</th>
    <th>Date</th>
    <th>user_id</th>
    <th>id</th>
    <th>Action</th>
  </tr>

<% @user.rides.each do |ride| %>
  <tr>
    <td><%= link_to "#{ride.origin} ---> #{ride.destination}", ride %></td>
    <td><%= ride.origin %></td>
    <td><%= ride.destination %></td>
    <td><%= ride.date.strftime(" %A, %b %d, %Y") %></td>
    <td><%= ride.user_id %></td>
    <td><%= @ride_id %></td>
    <td>
      <div class="btn-group">
	<a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
	  Action
	  <span class="caret"></span>
	  </a>
	<ul class="dropdown-menu">
	  <li><%= link_to 'Show', ride %></li>
	  <li><%= link_to 'Edit', edit_ride_path(ride) %></li>
	  <li><%= link_to 'Destroy', ride, confirm: 'Are you sure?', method: :delete %></li>
	</ul>
      </div>
    </td>
  </tr>
<% end %>
</table>
</div>


<% provide(:title, 'Sign up') %>
<div class="row-fluid">
  <section id="signup" class="embos span6 offset3">
      <h1>Sign up</h1>
      <hr>
      <div class="row-fluid">
	  <%= link_to image_tag('fb-logo.png'), "/auth/facebook", class: "sign_in signup span6 btn" %>
	  <button href="#" data-toggle="collapse" data-target="#signup-form" class="tooltip-right span6 btn" title="You gonna fill out a form">The hard way</button>
      </div>
      
      <div id="signup-form" class="collapse in"><hr>
	<%= simple_form_for(@user,:html => {:class => 'form-horizontal' }) do |f| %>
	<%= render 'fields', f: f %>
	  <div class="controls">
	  <%= f.submit "Sign up", class: "btn btn-large btn-primary" %>
	  </div>
	<% end %>
      </div>
  </section>
</div>
<% provide(:title, 'Sign up') %>
<div class="row-fluid">
  <div class="embos span6">
      <h1>Sign up</h1><hr>
        <%= simple_form_for(@user,:html => {:class => 'form-horizontal' }) do |f| %>
      <%= render 'fields', f: f %>
      <div class="controls">
      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
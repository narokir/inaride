<div class="well">
  <%= simple_form_for(@user, :html => {:class => 'form-inline' }) do |f| %>
<%= render '/shared/error_messages' %>  
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
  <div class="actions">
    <%= f.submit  class: "btn btn-primary btn-large" %>
  </div>
<% end %>
</div>

<div id="main" class="container">
  <div class="row-fluid">
    <div class ="embos">

      <h2>Sign in</h2>
      Got a facebook account?<br><br>
      <%= link_to image_tag('fb_login_btn_small.png'), user_omniauth_authorize_path(:facebook) %>
      <br><br>
      <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <%= f.error_notification %>
	<div class="form-inputs">
	  <%= f.input :email, :required => false, :autofocus => true, :label => false, :placeholder => 'Email address' %>
	  <%= f.input :password, :required => false, :label => false, :placeholder => 'Password' %>
	  <%= f.input :remember_me, :class => 'span', :as => :boolean if devise_mapping.rememberable? %>
	</div>
      
	<div class="form-actions">
	  <%= f.button :submit, "Sign in" %><br><br>
	  <%= render "devise/shared/links" %>
	</div>
      <% end %>
    </div>
  </div>
</div>
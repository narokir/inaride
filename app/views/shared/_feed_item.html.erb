<li id="<%= feed_item.id %>">
  <%= image_tag(feed_item.user.image) %>
  <span class="user">
    <%= link_to feed_item.user.first_name, feed_item.user %>
  </span>
  <span class="content"><%= link_to "#{feed_item.origin} ---> #{feed_item.destination}", feed_item %></span>
  <span class="date">
    <%= feed_item.date.strftime(" %A, %b %d, %Y") %>
  </span>
  <span><%= feed_item.price %></span>
  <% if current_user?(feed_item.user) %>
  <%= link_to 'delete', feed_item, method: :delete, data: { confirm: "You sure?"},
				    title: "Delete Ride #{feed_item.origin} to #{feed_item.destination}" %>
  <% end %>
</li>